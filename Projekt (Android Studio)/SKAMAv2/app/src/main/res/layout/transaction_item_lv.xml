<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/transaction_item_type_tv_id"
        android:text="type_place"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/transaction_item_amount_tv_id"
        android:text="@string/transaction_item_amount"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_item_type_tv_id" />

    <TextView
        android:id="@+id/transaction_item_price_tv_id"
        android:text="@string/transaction_item_price"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/transaction_item_date_tv_id"
        android:text="date_place"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/transaction_item_price_tv_id" />

    <Button
        android:id="@+id/transaction_item_remove_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/owned_item_remove_btn"
        android:layout_below="@+id/transaction_item_date_tv_id" />
</RelativeLayout>