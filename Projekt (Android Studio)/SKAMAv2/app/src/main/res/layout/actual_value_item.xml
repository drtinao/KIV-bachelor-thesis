<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cardview_shadow_start_color">

    <LinearLayout
        android:id="@+id/actual_value_item_date_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actual_value_item_date_tv1_id"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/time_graph_layout"
            android:textSize="15dp"
            android:singleLine="true"
            android:textColor="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/actual_value_item_date_tv2_id"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_graph_placeholder_layout"
            android:textSize="15dp"
            android:singleLine="true"
            android:textColor="@android:color/holo_orange_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actual_value_item_price_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/actual_value_item_date_layout_id">

        <TextView
            android:id="@+id/actual_value_item_price_tv1_id"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/price_graph_layout"
            android:textSize="15dp"
            android:singleLine="true"
            android:textColor="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/actual_value_item_price_tv2_id"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_graph_placeholder_layout"
            android:textSize="15dp"
            android:singleLine="true"
            android:textColor="@android:color/holo_orange_light" />
    </LinearLayout>
</RelativeLayout>