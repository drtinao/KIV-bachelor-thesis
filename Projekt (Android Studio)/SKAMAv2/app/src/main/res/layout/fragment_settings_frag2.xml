<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/settings_crypto_news_pref_title_id"
        android:textAppearance="@style/HeadlineEditSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/preferred_news_title_settings" />

    <LinearLayout
        android:id="@+id/settings_crypto_news_pref_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/settings_crypto_news_pref_title_id">

        <TextView
            android:id="@+id/settings_crypto_news_pref_tv_id"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/choice_text_settings" />

        <Spinner
            android:id="@+id/settings_crypto_news_pref_spinner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/preferred_prompt_settings" />
    </LinearLayout>

    <View
        android:id="@+id/settings_crypto_news_pref_divider_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/settings_crypto_news_pref_layout_id"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/settings_crypto_wallet_pref_title_id"
        android:textAppearance="@style/HeadlineEditSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/settings_crypto_news_pref_divider_id"
        android:text="@string/preferred_wallet_title" />

    <LinearLayout
        android:id="@+id/settings_crypto_wallet_btc_pref_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/settings_crypto_wallet_pref_title_id">

        <TextView
            android:id="@+id/settings_crypto_wallet_btc_pref_tv_id"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/preferred_wallet_bitcoin" />

        <Spinner
            android:id="@+id/settings_crypto_wallet_btc_pref_spinner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/preferred_prompt_settings" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_crypto_wallet_ltc_pref_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_crypto_wallet_btc_pref_layout_id"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settings_crypto_wallet_ltc_pref_tv_id"
            android:layout_marginRight="4dp"
            android:textAppearance="@style/DescBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferred_wallet_litecoin" />

        <Spinner
            android:id="@+id/settings_crypto_wallet_ltc_pref_spinner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/preferred_prompt_settings" />
    </LinearLayout>
</RelativeLayout>