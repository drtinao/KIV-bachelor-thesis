<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/created_alert_item_type_tv_id"
        android:text="type_place"
        android:focusable="false"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/created_alert_item_price_tv_id"
        android:text="price_place"
        android:focusable="false"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created_alert_item_type_tv_id" />

    <TextView
        android:id="@+id/created_alert_item_name_tv_id"
        android:text="name_place"
        android:focusable="false"
        android:textAppearance="@style/DescBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/created_alert_item_remove_id"
        android:text="@string/owned_item_remove_btn"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/created_alert_item_name_tv_id" />
</RelativeLayout>